{
    "tasks": [
        {
            "label": "Run C File",
            "command": "${fileDirname}/main",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test"
        },
        {
            "label": "[C/C++] Build and Test active file.",
            "detail": "Builds and Runs file automatically. Problems will be outputted on \"problems\" tab.",
            "dependsOn":[
                "g++ build active file",
                "Run C File"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "-ggdb",
                "-Iinclude",
                "*.cpp",
                "-o",
                "main.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": "**/*.cpp"
            }
        },
        {
            "label": "[VHDL] Assemble and run",
            "command": "ghdl -a ${fileDirname}/*.vhd; ghdl -e ${input:top_entity}; ghdl -r ${input:top_entity} --vcd=${fileDirname}/saida.vcd",
            "group": {
                "kind": "build",
                "isDefault": "**/*.vhd"
            },
            "type": "shell"
        }
    ],
    "version": "2.0.0",
    "inputs": [
        {
        "id": "top_entity",
        "default": "testbench",
        "type": "promptString",
        "description": "Selecione o nome da entidade-topo:"
        }
    ]
}